<Page
    x:Class="Tiny_GymBook.Presentation.PlanDetail"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:models="using:Tiny_GymBook.Models"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="using:Tiny_GymBook.Presentation"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid Padding="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Trainingsplan-Name -->
        <TextBlock Text="{Binding Trainingsplan.Name}"
                   FontSize="22"
                   FontWeight="Bold"
                   HorizontalAlignment="Center"
                   Foreground="DodgerBlue"
                   Margin="0,0,0,10"/>

        <!-- Aktueller Tag -->
        <TextBlock Text="{Binding AktuellerTag}"
                   FontSize="18"
                   FontWeight="SemiBold"
                   Margin="0,0,0,12"
                   HorizontalAlignment="Center"/>

        <!-- Liste der Übungen -->
        <ListView Grid.Row="1"
                  ItemsSource="{Binding Uebungen}">
            <ListView.ItemTemplate>
                <DataTemplate x:DataType="models:Uebung">
                    <Grid Padding="8,4">
                        <TextBlock Text="{x:Bind Name}"
                                FontSize="16"/>
                    </Grid>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <!-- Buttons -->
        <StackPanel Grid.Row="2"
                Orientation="Horizontal"
                Spacing="12"
                HorizontalAlignment="Center"
                Margin="0,10,0,0">
            <Button Content="Übung hinzufügen"
                    Command="{Binding AddUebungCommand}"/>
            <Button Content="Tag hinzufügen"
                    Command="{Binding AddTagCommand}"/>
        </StackPanel>

    </Grid>
</Page>
