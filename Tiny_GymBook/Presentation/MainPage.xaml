<Page
  x:Class="Tiny_GymBook.Presentation.MainPage"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
  xmlns:utu="using:Uno.Toolkit.UI"
  xmlns:controls="using:Microsoft.UI.Xaml.Controls"
  mc:Ignorable="d"
  x:Name="RootPage"
  Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

  <Grid Padding="16,12"
        RowSpacing="12">
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto"/>
      <!-- Header -->
      <RowDefinition Height="Auto"/>
      <!-- Load older -->
      <RowDefinition Height="*"/>
      <!-- Feed -->
      <RowDefinition Height="Auto"/>
      <!-- Bottom Nav -->
    </Grid.RowDefinitions>

    <!-- HEADER -->
    <Grid Grid.Row="0"
          ColumnSpacing="12">
      <Grid.ColumnDefinitions>
        <ColumnDefinition Width="*"/>
        <ColumnDefinition Width="Auto"/>
      </Grid.ColumnDefinitions>

      <TextBlock Text="{Binding AktuelleWoche.WochenHeaderText}"
                 FontSize="18"
                 FontWeight="Bold"
                 VerticalAlignment="Center"/>

      <StackPanel Grid.Column="1"
                  Orientation="Horizontal"
                  Spacing="8"
                  VerticalAlignment="Center">
        <ComboBox ItemsSource="{Binding AllePlaene}"
                  SelectedItem="{Binding AktiverPlan, Mode=TwoWay}"
                  DisplayMemberPath="Name"
                  PlaceholderText="Plan wählen"
                  MinWidth="220"/>
        <TextBlock Text="{Binding AllePlaene.Count}"
                   VerticalAlignment="Center"
                   Foreground="{ThemeResource SystemControlForegroundBaseMediumBrush}"/>
      </StackPanel>
    </Grid>

    <!-- Ältere Woche -->
    <Button Grid.Row="1"
            Content="Ältere Woche laden"
            Margin="0,4,0,8"
            Command="{Binding LoadOlderWeekCommand}"/>

    <!-- FEED -->
    <ScrollViewer Grid.Row="2"
                  VerticalScrollBarVisibility="Auto"
                  HorizontalScrollBarVisibility="Disabled">
      <ItemsControl ItemsSource="{Binding Wochen}">
        <ItemsControl.ItemsPanel>
          <ItemsPanelTemplate>
            <StackPanel/>
          </ItemsPanelTemplate>
        </ItemsControl.ItemsPanel>

        <ItemsControl.ItemTemplate>
          <DataTemplate>
            <StackPanel Margin="0,0,0,20"
                        Spacing="8">

              <!-- Wochen-Header (Linie) -->
              <Border BorderThickness="0,0,0,1"
                      BorderBrush="{ThemeResource SystemControlForegroundBaseLowBrush}"
                      Padding="0,0,0,6"
                      Margin="0,0,0,8">
                <TextBlock Text="{Binding WochenHeaderText}"
                           FontSize="16"
                           FontWeight="SemiBold"/>
              </Border>

              <!-- TAGE (jeder Tag mit Rahmen) -->
              <ItemsControl ItemsSource="{Binding Tage}">
                <ItemsControl.ItemsPanel>
                  <ItemsPanelTemplate>
                    <StackPanel/>
                  </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>

                <ItemsControl.ItemTemplate>
                  <DataTemplate>
                    <Border Margin="0,0,0,12"
                            Padding="10"
                            CornerRadius="8"
                            BorderBrush="{ThemeResource SystemControlForegroundBaseLowBrush}"
                            BorderThickness="1">
                      <StackPanel Spacing="8">

                        <!-- Tag-Name -->
                        <TextBlock Text="{Binding Name}"
                                   FontSize="15"
                                   FontWeight="Bold"/>

                        <!-- ÜBUNGEN -->
                        <ItemsControl ItemsSource="{Binding Uebungen}">
                          <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                              <StackPanel/>
                            </ItemsPanelTemplate>
                          </ItemsControl.ItemsPanel>

                          <ItemsControl.ItemTemplate>
                            <DataTemplate>
                              <StackPanel Spacing="6"
                                          Margin="0,0,0,6">

                                <!-- Übungskopf + [+] -->
                                <Grid ColumnSpacing="8">
                                  <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                  </Grid.ColumnDefinitions>

                                  <!-- Muskelgruppe entfernt -->
                                  <StackPanel Spacing="0">
                                    <TextBlock Text="{Binding Name}"
                                               FontWeight="SemiBold"/>
                                  </StackPanel>

                                  <Button Grid.Column="1"
                                          Style="{StaticResource IconCircleButton}"
                                          Content="&#xE710;"
                                          VerticalAlignment="Center"
                                          Command="{Binding DataContext.AddSatzCommand, ElementName=RootPage}"
                                          CommandParameter="{Binding}"/>
                                </Grid>



                                <!-- SÄTZE -->
                                <ItemsControl ItemsSource="{Binding Saetze}"
                                              Margin="0,2,0,0">
                                  <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                      <StackPanel/>


                                    </ItemsPanelTemplate>
                                  </ItemsControl.ItemsPanel>



                                  <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                      <StackPanel>
                                        <Grid Margin="0,2,0,2"
                                              ColumnSpacing="8">
                                          <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <!-- # -->
                                            <ColumnDefinition Width="*"/>
                                            <!-- Gewicht -->
                                            <ColumnDefinition Width="*"/>
                                            <!-- Wdh -->
                                            <ColumnDefinition Width="2*"/>
                                            <!-- Kommentar -->
                                            <ColumnDefinition Width="Auto"/>
                                            <!-- Delete -->
                                          </Grid.ColumnDefinitions>

                                          <TextBlock Grid.Column="0"
                                                     Text="{Binding Nummer}"
                                                     Margin="0,0,8,0"
                                                     VerticalAlignment="Center"/>

                                          <controls:NumberBox Grid.Column="1"
                                                              Value="{Binding Gewicht, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                              PlaceholderText="Kg"
                                                              Minimum="0"
                                                              SmallChange="2"
                                                              LargeChange="5"
                                                              Height="28"
                                                              Padding="6,2"
                                                              FontSize="14"
                                                              SpinButtonPlacementMode="Hidden"
                                                              LostFocus="OnSatzFieldLostFocus"/>

                                          <controls:NumberBox Grid.Column="2"
                                                              Value="{Binding Wiederholungen, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                              PlaceholderText="Wdh"
                                                              Minimum="0"
                                                              Maximum="1000"
                                                              SmallChange="1"
                                                              LargeChange="5"
                                                              Height="28"
                                                              Padding="6,2"
                                                              FontSize="14"
                                                              SpinButtonPlacementMode="Hidden"
                                                              LostFocus="OnSatzFieldLostFocus"/>

                                          <TextBox Grid.Column="3"
                                                   Text="{Binding Kommentar, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                   PlaceholderText="Kommentar"
                                                   Height="28"
                                                   Padding="6,2"
                                                   FontSize="14"
                                                   TextWrapping="NoWrap"
                                                   LostFocus="OnSatzFieldLostFocus"/>

                                          <Button Grid.Column="4"
                                                  Style="{StaticResource IconCircleButton}"
                                                  Content="&#xE74D;"
                                                  Foreground="Red"
                                                  VerticalAlignment="Center"
                                                  ToolTipService.ToolTip="Satz löschen"
                                                  Command="{Binding DataContext.DeleteSatzCommand, ElementName=RootPage}"
                                                  CommandParameter="{Binding}"/>
                                        </Grid>




                                      </StackPanel>
                                    </DataTemplate>
                                  </ItemsControl.ItemTemplate>
                                </ItemsControl>


                                <!-- Trennlinie NACH jeder Übung -->
                                <Border BorderBrush="{ThemeResource SystemControlForegroundBaseLowBrush}"
                                        BorderThickness="0,0,0,1"
                                        Margin="0,4,0,0"/>


                              </StackPanel>



                            </DataTemplate>
                          </ItemsControl.ItemTemplate>
                        </ItemsControl>

                      </StackPanel>
                    </Border>
                  </DataTemplate>
                </ItemsControl.ItemTemplate>
              </ItemsControl>

            </StackPanel>
          </DataTemplate>
        </ItemsControl.ItemTemplate>
      </ItemsControl>
    </ScrollViewer>

    <!-- Bottom-Navigation (weiterhin Uno Toolkit) -->
    <utu:TabBar Grid.Row="3"
                Margin="0,8,0,0">
      <utu:TabBar.Items>
        <utu:TabBarItem x:Uid="TabHome"
                        Padding="12"
                        Command="{Binding GoBackCommand}">
          <utu:TabBarItem.Icon>
            <FontIcon FontFamily="{ThemeResource SymbolThemeFontFamily}"
                      FontSize="24"
                      Glyph="&#xE10F;"/>
          </utu:TabBarItem.Icon>
        </utu:TabBarItem>
        <utu:TabBarItem x:Uid="TabPlans"
                        Padding="12"
                        Command="{Binding NavigateToPlaeneCommand}">
          <utu:TabBarItem.Icon>
            <FontIcon FontFamily="{ThemeResource SymbolThemeFontFamily}"
                      FontSize="24"
                      Glyph="&#xE8A5;"/>
          </utu:TabBarItem.Icon>
        </utu:TabBarItem>
      </utu:TabBar.Items>
    </utu:TabBar>

  </Grid>
</Page>
