<Page x:Class="Tiny_GymBook.Presentation.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:models="using:Tiny_GymBook.Models"
      mc:Ignorable="d"
      Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

  <Grid>
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="*"/>
    </Grid.RowDefinitions>

    <!-- Header mit KW und Datumsbereich -->
    <StackPanel Grid.Row="0"
                Margin="12">
      <TextBlock Text="Trainingswoche"
                 FontSize="24"
                 FontWeight="Bold"/>
      <TextBlock x:Name="WochenHeader"
                 FontSize="16"/>
    </StackPanel>

    <!-- Hauptinhalt -->
    <ScrollViewer Grid.Row="1">
      <ItemsControl x:Name="EintraegeItemsControl"
                    Margin="12,0">
        <ItemsControl.ItemTemplate>
          <DataTemplate x:DataType="models:Trainingseintrag">
            <StackPanel Margin="0,0,0,20"
                        BorderBrush="LightGray"
                        BorderThickness="0,0,0,1">
              <!-- Übungsinfo -->
              <Grid>
                <Grid.ColumnDefinitions>
                  <ColumnDefinition Width="*"/>
                  <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel>
                  <TextBlock Text="{x:Bind Uebung.Name}"
                             FontSize="18"
                             FontWeight="Bold"/>
                  <TextBlock Text="{x:Bind Uebung.Muskelgruppe}"
                             Foreground="Gray"/>
                </StackPanel>

                <Button Content="+"
                        Grid.Column="1"
                        Click="AddSet_Click"
                        Tag="{x:Bind}"/>
              </Grid>

              <!-- Sätze -->
              <ItemsControl ItemsSource="{Binding Saetze}"
                            Margin="0,10">
                <ItemsControl.ItemTemplate>
                  <DataTemplate x:DataType="models:Satz">
                    <Grid Margin="0,5">
                      <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="2*"/>
                      </Grid.ColumnDefinitions>

                      <TextBlock Text="{x:Bind Nummer}"
                                 Margin="0,0,10,0"/>
                      <TextBox Text="{x:Bind Gewicht, Mode=TwoWay}"
                               Grid.Column="1"
                               PlaceholderText="KG"
                               Margin="5,0"/>
                      <TextBox Text="{x:Bind Wiederholungen, Mode=TwoWay}"
                               Grid.Column="2"
                               PlaceholderText="Wdh"
                               Margin="5,0"/>
                      <TextBox Text="{x:Bind Kommentar, Mode=TwoWay}"
                               Grid.Column="3"
                               PlaceholderText="Kommentar"
                               Margin="5,0"/>
                    </Grid>
                  </DataTemplate>
                </ItemsControl.ItemTemplate>
              </ItemsControl>
            </StackPanel>
          </DataTemplate>
        </ItemsControl.ItemTemplate>
      </ItemsControl>
    </ScrollViewer>
  </Grid>
</Page>
