<Page x:Class="Tiny_GymBook.Presentation.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:utu="using:Uno.Toolkit.UI"
      xmlns:models="using:Tiny_GymBook.Models"
      mc:Ignorable="d"
      x:Name="RootPage"
      Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

  <Grid Padding="12">
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto"/>
      <!-- Header -->
      <RowDefinition Height="*"/>
      <!-- Inhalt -->
      <RowDefinition Height="Auto"/>
      <!-- TabBar -->
    </Grid.RowDefinitions>

    <!-- WochenHeader -->
    <TextBlock x:Name="WochenHeader"
               Text="{Binding AktuelleWoche.WochenHeaderText}"
               FontSize="18"
               FontWeight="Bold"
               Margin="0,0,0,12"/>

    <!-- Scrollbarer Bereich -->
    <ScrollViewer Grid.Row="1"
                  VerticalScrollBarVisibility="Auto">

      <!-- Trainings-Einträge -->
      <ItemsControl Grid.Row="1"
                    ItemsSource="{Binding Eintraege}">
        <ItemsControl.ItemTemplate>
          <DataTemplate x:DataType="models:Trainingseintrag">
            <StackPanel Margin="0,0,0,20"
                        BorderBrush="LightGray"
                        BorderThickness="0,0,0,1">

              <!-- Übung -->
              <Grid>
                <Grid.ColumnDefinitions>
                  <ColumnDefinition Width="*"/>
                  <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel>
                  <TextBlock Text="{x:Bind Uebung.Name, Mode=OneWay}"
                             FontSize="18"
                             FontWeight="Bold"/>
                  <TextBlock Text="{x:Bind Uebung.Muskelgruppe, Mode=OneWay}"
                             Foreground="Gray"/>
                </StackPanel>

                <Button Content="+"
                        Grid.Column="1"
                        Command="{Binding DataContext.AddSatzCommand, ElementName=RootPage}"
                        CommandParameter="{Binding}"/>
              </Grid>

              <!-- Sätze -->
              <ItemsControl ItemsSource="{x:Bind Saetze, Mode=OneWay}"
                            Margin="0,10">
                <ItemsControl.ItemTemplate>
                  <DataTemplate x:DataType="models:Satz">
                    <Grid Margin="0,5">
                      <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="2*"/>
                      </Grid.ColumnDefinitions>

                      <TextBlock Text="{x:Bind Nummer}"
                                 Margin="0,0,10,0"/>
                      <TextBox Text="{x:Bind Gewicht, Mode=TwoWay}"
                               Grid.Column="1"
                               PlaceholderText="KG"
                               Margin="5,0"/>
                      <TextBox Text="{x:Bind Wiederholungen, Mode=TwoWay}"
                               Grid.Column="2"
                               PlaceholderText="Wdh"
                               Margin="5,0"/>
                      <TextBox Text="{x:Bind Kommentar, Mode=TwoWay}"
                               Grid.Column="3"
                               PlaceholderText="Kommentar"
                               Margin="5,0"
                               FontSize="12"
                               TextWrapping="Wrap"
                               AcceptsReturn="True"
                               VerticalAlignment="Top"
                               MinHeight="40"
                               MaxHeight="100"/>
                    </Grid>
                  </DataTemplate>
                </ItemsControl.ItemTemplate>
              </ItemsControl>

            </StackPanel>
          </DataTemplate>
        </ItemsControl.ItemTemplate>
      </ItemsControl>
    </ScrollViewer>

    <!-- TabBar ganz unten -->
    <utu:TabBar Grid.Row="2"
                Style="{StaticResource TopTabBarStyle}">
      <utu:TabBar.Items>
        <utu:TabBarItem Content="HOME">
          <utu:TabBarItem.Icon>
            <FontIcon Glyph="{StaticResource HomeIcon}"/>
          </utu:TabBarItem.Icon>
        </utu:TabBarItem>
        <utu:TabBarItem Content="Pläne"
                        Command="{Binding NavigateToPlaeneCommand}">
          <utu:TabBarItem.Icon>
            <FontIcon Glyph="{StaticResource SupportIcon}"/>
          </utu:TabBarItem.Icon>
        </utu:TabBarItem>
      </utu:TabBar.Items>
    </utu:TabBar>

  </Grid>
</Page>