<Page
  x:Class="Tiny_GymBook.Presentation.MainPage"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
  xmlns:utu="using:Uno.Toolkit.UI"
  xmlns:controls="using:Microsoft.UI.Xaml.Controls"
  mc:Ignorable="d"
  x:Name="RootPage"
  Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

  <Grid Padding="12"
        RowSpacing="6">
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto"/>
      <!-- Header -->
      <RowDefinition Height="Auto"/>
      <!-- Load older -->
      <RowDefinition Height="*"/>
      <!-- Feed -->
      <RowDefinition Height="Auto"/>
      <!-- Bottom Nav -->
    </Grid.RowDefinitions>

    <!-- ===== HEADER ===== -->
    <Grid Grid.Row="0"
          ColumnSpacing="12">
      <Grid.ColumnDefinitions>
        <ColumnDefinition Width="*"/>
        <ColumnDefinition Width="Auto"/>
      </Grid.ColumnDefinitions>

      <TextBlock Text="{Binding AktuelleWoche.WochenHeaderText}"
                 FontSize="18"
                 FontWeight="Bold"
                 VerticalAlignment="Center"/>

      <StackPanel Grid.Column="1"
                  Orientation="Horizontal"
                  Spacing="8"
                  VerticalAlignment="Center">
        <ComboBox ItemsSource="{Binding AllePlaene}"
                  SelectedItem="{Binding AktiverPlan, Mode=TwoWay}"
                  DisplayMemberPath="Name"
                  PlaceholderText="Plan wählen"
                  MinWidth="220"/>
        <TextBlock Text="{Binding AllePlaene.Count}"
                   VerticalAlignment="Center"
                   Foreground="{ThemeResource SystemControlForegroundBaseMediumBrush}"/>
      </StackPanel>
    </Grid>

    <!-- ===== ÄLTERE WOCHE LADEN ===== -->
    <Button Grid.Row="1"
            Content="Ältere Woche laden"
            Margin="0,4,0,8"
            Command="{Binding LoadOlderWeekCommand}"/>

    <!-- ===== FEED ===== -->
    <ScrollViewer Grid.Row="2"
                  VerticalScrollBarVisibility="Auto"
                  HorizontalScrollBarVisibility="Disabled">

      <ItemsControl ItemsSource="{Binding Wochen}"
                    VerticalAlignment="Top">
        <ItemsControl.ItemsPanel>
          <ItemsPanelTemplate>
            <StackPanel/>
          </ItemsPanelTemplate>
        </ItemsControl.ItemsPanel>

        <ItemsControl.ItemTemplate>
          <DataTemplate>
            <StackPanel Spacing="8"
                        Margin="0,0,0,12">

              <!-- Wochen-Subheader (dezent) -->
              <Grid Padding="12,6"
                    Background="{ThemeResource ControlFillColorSecondaryBrush}">
                <Grid.ColumnDefinitions>
                  <ColumnDefinition Width="*"/>
                  <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBlock Text="{Binding WochenHeaderText}"
                           FontSize="16"
                           FontWeight="SemiBold"/>
                <!-- Wochen-Subheader: rechts "Tage: N" -->
                <TextBlock Grid.Column="1"
                           Opacity="0.8">
  <Run Text="Tage: "/>
  <Run Text="{Binding Tage.Count}"/>
                </TextBlock>
              </Grid>

              <!-- TAGE DER WOCHE -->
              <ItemsControl ItemsSource="{Binding Tage}">
                <ItemsControl.ItemsPanel>
                  <ItemsPanelTemplate>
                    <StackPanel/>
                  </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>

                <ItemsControl.ItemTemplate>
                  <DataTemplate>
                    <!-- Tag-Card mit Akzentleiste links (wie PlanDetail) -->
                    <Border Margin="0,0,0,8"
                            Padding="0"
                            CornerRadius="10"
                            BorderBrush="{ThemeResource SystemControlForegroundBaseLowBrush}"
                            BorderThickness="1">
                      <Grid>
                        <Grid.ColumnDefinitions>
                          <ColumnDefinition Width="4"/>
                          <!-- Akzent -->
                          <ColumnDefinition Width="*"/>
                          <!-- Inhalt -->
                        </Grid.ColumnDefinitions>

                        <!-- Akzent links -->
                        <Border Grid.Column="0"
                                Background="{ThemeResource AccentFillColorDefaultBrush}"
                                CornerRadius="10,0,0,10"/>

                        <!-- Inhalt -->
                        <StackPanel Grid.Column="1"
                                    Spacing="0">

                          <!-- Tag-Header -->
                          <Grid Padding="12,8"
                                Background="{ThemeResource ControlFillColorDefaultBrush}">
                            <Grid.ColumnDefinitions>
                              <ColumnDefinition Width="*"/>
                              <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Text="{Binding Name}"
                                       FontSize="15"
                                       FontWeight="Bold"
                                       VerticalAlignment="Center"/>

                            <!-- Optional: künftige Tag-Actions hier -->
                          </Grid>

                          <!-- Subheader: Übungen-Anzahl -->
                          <Grid Padding="12,6"
                                Background="{ThemeResource ControlFillColorSecondaryBrush}">
                            <Grid.ColumnDefinitions>
                              <ColumnDefinition Width="*"/>
                              <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Übungen in diesem Tag"
                                       Opacity="0.8"/>
                            <!-- Tag-Subheader: rechts "Übungen: N" -->
                            <TextBlock Grid.Column="1"
                                       FontWeight="SemiBold">
  <Run Text="Übungen: "/>
  <Run Text="{Binding Uebungen.Count}"/>
                            </TextBlock>
                          </Grid>

                          <!-- Übungen-Liste -->
                          <ItemsControl ItemsSource="{Binding Uebungen}">
                            <ItemsControl.ItemsPanel>
                              <ItemsPanelTemplate>
                                <StackPanel/>
                              </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>

                            <ItemsControl.ItemTemplate>
                              <DataTemplate>
                                <StackPanel Spacing="6"
                                            Margin="12,8,12,0">

                                  <!-- Übungskopf + [+ Satz] -->
                                  <Grid ColumnSpacing="8">
                                    <Grid.ColumnDefinitions>
                                      <ColumnDefinition Width="*"/>
                                      <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <TextBlock Text="{Binding Name}"
                                               FontWeight="SemiBold"
                                               VerticalAlignment="Center"/>

                                    <Button Grid.Column="1"
                                            Style="{StaticResource IconCircleButton}"
                                            Content="&#xE710;"
                                            ToolTipService.ToolTip="Satz hinzufügen"
                                            VerticalAlignment="Center"
                                            Command="{Binding DataContext.AddSatzCommand, ElementName=RootPage}"
                                            CommandParameter="{Binding}"/>
                                  </Grid>

                                  <!-- Sätze-Liste -->
                                  <ItemsControl ItemsSource="{Binding Saetze}"
                                                Margin="0,2,0,0">
                                    <ItemsControl.ItemsPanel>
                                      <ItemsPanelTemplate>
                                        <StackPanel/>
                                      </ItemsPanelTemplate>
                                    </ItemsControl.ItemsPanel>

                                    <ItemsControl.ItemTemplate>
                                      <DataTemplate>
                                        <Grid Margin="0,2,0,2"
                                              ColumnSpacing="8">
                                          <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <!-- # -->
                                            <ColumnDefinition Width="*"/>
                                            <!-- Gewicht -->
                                            <ColumnDefinition Width="*"/>
                                            <!-- Wdh -->
                                            <ColumnDefinition Width="2*"/>
                                            <!-- Kommentar -->
                                            <ColumnDefinition Width="Auto"/>
                                            <!-- Delete -->
                                          </Grid.ColumnDefinitions>

                                          <TextBlock Grid.Column="0"
                                                     Text="{Binding Nummer}"
                                                     Margin="0,0,8,0"
                                                     VerticalAlignment="Center"/>

                                          <controls:NumberBox Grid.Column="1"
                                                              Value="{Binding Gewicht, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                              PlaceholderText="Kg"
                                                              Minimum="0"
                                                              SmallChange="2"
                                                              LargeChange="5"
                                                              Height="28"
                                                              Padding="6,2"
                                                              FontSize="14"
                                                              SpinButtonPlacementMode="Hidden"
                                                              LostFocus="OnSatzFieldLostFocus"
                                                              VerticalAlignment="Center"/>

                                          <controls:NumberBox Grid.Column="2"
                                                              Value="{Binding Wiederholungen, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                              PlaceholderText="Wdh"
                                                              Minimum="0"
                                                              Maximum="1000"
                                                              SmallChange="1"
                                                              LargeChange="5"
                                                              Height="28"
                                                              Padding="6,2"
                                                              FontSize="14"
                                                              SpinButtonPlacementMode="Hidden"
                                                              LostFocus="OnSatzFieldLostFocus"
                                                              VerticalAlignment="Center"/>

                                          <TextBox Grid.Column="3"
                                                   Text="{Binding Kommentar, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                   PlaceholderText="Kommentar"
                                                   Height="28"
                                                   Padding="6,2"
                                                   FontSize="14"
                                                   VerticalContentAlignment="Center"
                                                   TextWrapping="NoWrap"
                                                   LostFocus="OnSatzFieldLostFocus"/>

                                          <Button Grid.Column="4"
                                                  Style="{StaticResource IconCircleButton}"
                                                  Content="&#xE74D;"
                                                  Foreground="Red"
                                                  VerticalAlignment="Center"
                                                  ToolTipService.ToolTip="Satz löschen"
                                                  Command="{Binding DataContext.DeleteSatzCommand, ElementName=RootPage}"
                                                  CommandParameter="{Binding}"/>
                                        </Grid>
                                      </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                  </ItemsControl>

                                  <!-- Trennlinie nach der Übung -->
                                  <Border BorderBrush="{ThemeResource SystemControlForegroundBaseLowBrush}"
                                          BorderThickness="0,0,0,1"
                                          Margin="0,6,0,0"/>
                                </StackPanel>
                              </DataTemplate>
                            </ItemsControl.ItemTemplate>
                          </ItemsControl>

                          <!-- kleiner Bottom-Puffer in der Card -->
                          <Border Height="8"
                                  Background="Transparent"/>
                        </StackPanel>
                      </Grid>
                    </Border>
                  </DataTemplate>
                </ItemsControl.ItemTemplate>
              </ItemsControl>

            </StackPanel>
          </DataTemplate>
        </ItemsControl.ItemTemplate>
      </ItemsControl>
    </ScrollViewer>

    <!-- ===== Bottom-Navigation (Uno Toolkit) ===== -->
    <utu:TabBar Grid.Row="3"
                Margin="0,8,0,0">
      <utu:TabBar.Items>
        <utu:TabBarItem x:Uid="TabHome"
                        Padding="12"
                        Command="{Binding GoBackCommand}">
          <utu:TabBarItem.Icon>
            <FontIcon FontFamily="{ThemeResource SymbolThemeFontFamily}"
                      FontSize="24"
                      Glyph="&#xE10F;"/>
          </utu:TabBarItem.Icon>
        </utu:TabBarItem>

        <utu:TabBarItem x:Uid="TabPlans"
                        Padding="12"
                        Command="{Binding NavigateToPlaeneCommand}">
          <utu:TabBarItem.Icon>
            <FontIcon FontFamily="{ThemeResource SymbolThemeFontFamily}"
                      FontSize="24"
                      Glyph="&#xE8A5;"/>
          </utu:TabBarItem.Icon>
        </utu:TabBarItem>
      </utu:TabBar.Items>
    </utu:TabBar>

  </Grid>
</Page>
