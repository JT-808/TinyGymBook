<Page
    x:Class="Tiny_GymBook.Presentation.PlanDetail"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid x:Name="RootGrid"
          Padding="12"
          RowSpacing="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Sticky Header -->
            <RowDefinition Height="Auto"/>
            <!-- Debug (optional) -->
            <RowDefinition Height="*"/>
            <!-- Scrollbarer Inhalt -->
        </Grid.RowDefinitions>

        <!-- ===== Sticky Header: Planname + Add Day + Save (gleiche Buttons wie unten) ===== -->
        <Grid Grid.Row="0"
              ColumnSpacing="8"
              Padding="0,0,0,8"
              Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Planname -->
            <TextBox
                Text="{Binding Trainingsplan.Name, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                PlaceholderText="Workout Plan"
                FontSize="20"
                FontWeight="Bold"
                BorderThickness="0,0,0,1"
                Padding="0,4,0,8"/>

            <!-- + Day -->
            <Button Grid.Column="1"
                    Padding="8"
                    Command="{Binding AddTagCommand}">
                <Button.Content>
                    <FontIcon FontFamily="{ThemeResource SymbolThemeFontFamily}"
                              Glyph="&#xE710;"/>
                    <!-- Add -->
                </Button.Content>
            </Button>

            <!-- Save & Back -->
            <Button Grid.Column="2"
                    Padding="8"
                    Command="{Binding SaveAndGoBackCommand}">
                <Button.Content>
                    <FontIcon FontFamily="{ThemeResource SymbolThemeFontFamily}"
                              Glyph="&#xE105;"/>
                    <!-- Save -->
                </Button.Content>
            </Button>
        </Grid>

        <!-- ===== Debug/Status (optional) ===== -->
        <StackPanel Grid.Row="1"
                    Orientation="Horizontal"
                    Spacing="12">
            <TextBlock Text="Days count:"/>
            <TextBlock Text="{Binding Tage.Count}"/>
            <TextBlock Text="â€¢ PlanId:"
                       Margin="12,0,0,0"/>
            <TextBlock Text="{Binding Trainingsplan.Trainingsplan_Id}"/>
        </StackPanel>

        <!-- ===== Scrollbarer Inhalt ===== -->
        <ScrollViewer Grid.Row="2"
                      VerticalScrollBarVisibility="Auto">
            <ItemsControl ItemsSource="{Binding Tage}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <StackPanel/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>

                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Margin="0,0,0,12"
                                Padding="10"
                                BorderBrush="{ThemeResource SystemControlForegroundBaseLowBrush}"
                                BorderThickness="1"
                                CornerRadius="8">
                            <StackPanel Spacing="8">

                                <!-- Day name + Add exercise -->
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <TextBox
                                        Text="{Binding Name, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                        PlaceholderText="Day"
                                        FontSize="18"
                                        BorderThickness="0,0,0,1"
                                        Padding="0,2,0,6"/>

                                    <Button Grid.Column="1"
                                            Padding="6"
                                            Command="{Binding DataContext.AddUebungToTagCommand, ElementName=RootGrid}"
                                            CommandParameter="{Binding}">
                                        <Button.Content>
                                            <FontIcon FontFamily="{ThemeResource SymbolThemeFontFamily}"
                                                      Glyph="&#xE710;"/>
                                            <!-- Add -->
                                        </Button.Content>
                                    </Button>
                                </Grid>

                                <!-- Exercises -->
                                <ItemsControl ItemsSource="{Binding Uebungen}">
                                    <ItemsControl.ItemsPanel>
                                        <ItemsPanelTemplate>
                                            <StackPanel/>
                                        </ItemsPanelTemplate>
                                    </ItemsControl.ItemsPanel>

                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Grid Margin="0,6,0,0">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>

                                                <TextBox
                                                    Text="{Binding Name, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                    PlaceholderText="Exercise"
                                                    FontSize="16"
                                                    BorderThickness="0,0,0,1"
                                                    Padding="0,2,0,6"/>

                                                <Button Grid.Column="1"
                                                        Padding="6"
                                                        Command="{Binding DataContext.DeleteExerciseCommand, ElementName=RootGrid}"
                                                        CommandParameter="{Binding}">
                                                    <Button.Content>
                                                        <FontIcon FontFamily="{ThemeResource SymbolThemeFontFamily}"
                                                                  Glyph="&#xE74D;"/>
                                                        <!-- Delete -->
                                                    </Button.Content>
                                                </Button>
                                            </Grid>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>

                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>

    </Grid>
</Page>
