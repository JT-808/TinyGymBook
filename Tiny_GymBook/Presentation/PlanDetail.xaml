<Page
    x:Class="Tiny_GymBook.Presentation.PlanDetail"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:utu="using:Uno.Toolkit.UI"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid x:Name="RootGrid"
          Padding="12"
          RowSpacing="6">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Header -->
            <RowDefinition Height="Auto"/>
            <!-- Debug -->
            <RowDefinition Height="*"/>
            <!-- Scrollbarer Inhalt -->
            <RowDefinition Height="Auto"/>
            <!-- Footer Buttons -->
            <RowDefinition Height="Auto"/>
            <!--  TabBar -->
        </Grid.RowDefinitions>

        <!-- ===== Sticky Header: Planname  ===== -->
        <Grid Grid.Row="0"
              Padding="0,0,0,8"
              Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
            <TextBox
                Text="{Binding Trainingsplan.Name, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                PlaceholderText="Workout Plan"
                FontSize="20"
                FontWeight="Bold"
                BorderThickness="0,0,0,1"
                Padding="0,4,0,8"/>
        </Grid>

        <!-- ===== Debug/Status ===== -->
        <StackPanel Grid.Row="1"
                    Orientation="Horizontal"
                    Spacing="12">
            <TextBlock Text="Days count:"/>
            <TextBlock Text="{Binding Tage.Count}"/>
            <TextBlock Text="• PlanId:"
                       Margin="12,0,0,0"/>
            <TextBlock Text="{Binding Trainingsplan.Trainingsplan_Id}"/>
        </StackPanel>

        <!-- ===== Scrollbarer Inhalt ===== -->
        <ScrollViewer Grid.Row="2"
                      VerticalScrollBarVisibility="Auto"
                      Padding="0,0,0,0">

            <ItemsControl ItemsSource="{Binding Tage}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <StackPanel/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>

                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <!-- Day-Card -->
                        <Border Margin="0,0,0,8"
                                Padding="0"
                                BorderBrush="{ThemeResource SystemControlForegroundBaseLowBrush}"
                                BorderThickness="1"
                                CornerRadius="10">

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="4"/>
                                    <!-- Akzentleiste -->
                                    <ColumnDefinition Width="*"/>
                                    <!-- Inhalt -->
                                </Grid.ColumnDefinitions>

                                <!-- Linke Akzentleiste -->
                                <Border Grid.Column="0"
                                        Background="{ThemeResource AccentFillColorDefaultBrush}"
                                        CornerRadius="10,0,0,10"/>

                                <!-- Inhalt -->
                                <StackPanel Grid.Column="1"
                                            Spacing="0">

                                    <!-- HEADER: Day-Name + Buttons -->
                                    <Grid Padding="12,8"
                                          Background="{ThemeResource ControlFillColorDefaultBrush}">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <!-- Day-Name -->
                                        <TextBox
                                            Text="{Binding Name, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                            PlaceholderText="Day"
                                            FontSize="18"
                                            BorderThickness="0,0,0,1"
                                            Padding="0,2,0,6"
                                            MinWidth="120"/>

                                        <!-- Add exercise -->
                                        <Button Grid.Column="1"
                                                Style="{StaticResource IconCircleButton}"
                                                Command="{Binding DataContext.AddUebungToTagCommand, ElementName=RootGrid}"
                                                CommandParameter="{Binding}"
                                                ToolTipService.ToolTip="Übung hinzufügen"
                                                AutomationProperties.Name="Add exercise"
                                                Margin="8,0,0,0">
                                            <Button.Content>&#xE710;</Button.Content>
                                        </Button>

                                        <!-- Delete day -->
                                        <Button Grid.Column="2"
                                                Style="{StaticResource IconCircleButton}"
                                                Foreground="Red"
                                                Command="{Binding DataContext.DeleteTagCommand, ElementName=RootGrid}"
                                                CommandParameter="{Binding}"
                                                ToolTipService.ToolTip="Tag löschen"
                                                AutomationProperties.Name="Delete day"
                                                Margin="8,0,0,0">
                                            <Button.Content>&#xE74D;</Button.Content>
                                        </Button>
                                    </Grid>

                                    <!-- SUBHEADER: kleine Hilfe + Anzahl Übungen -->
                                    <Grid Padding="12,6"
                                          Background="{ThemeResource ControlFillColorSecondaryBrush}">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <TextBlock Text="Übungen in diesem Tag"
                                                   Opacity="0.8"/>

                                        <StackPanel Grid.Column="1"
                                                    Orientation="Horizontal"
                                                    Spacing="6">
                                            <TextBlock Text="Anzahl:"
                                                       Opacity="0.8"/>
                                            <TextBlock Text="{Binding Uebungen.Count}"
                                                       FontWeight="SemiBold"/>
                                        </StackPanel>
                                    </Grid>

                                    <!-- EXERCISES -->
                                    <ItemsControl ItemsSource="{Binding Uebungen}">
                                        <ItemsControl.ItemsPanel>
                                            <ItemsPanelTemplate>
                                                <StackPanel/>
                                            </ItemsPanelTemplate>
                                        </ItemsControl.ItemsPanel>

                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <Grid Margin="12,8,12,0">
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="*"/>
                                                        <ColumnDefinition Width="Auto"/>
                                                    </Grid.ColumnDefinitions>

                                                    <TextBox
                                                        Text="{Binding Name, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                        PlaceholderText="Exercise"
                                                        FontSize="16"
                                                        BorderThickness="0,0,0,1"
                                                        Padding="0,2,0,6"/>

                                                    <Button Grid.Column="1"
                                                            Style="{StaticResource IconCircleButton}"
                                                            Command="{Binding DataContext.DeleteExerciseCommand, ElementName=RootGrid}"
                                                            CommandParameter="{Binding}"
                                                            ToolTipService.ToolTip="Übung löschen"
                                                            AutomationProperties.Name="Delete exercise"
                                                            Margin="8,0,0,0">
                                                        <Button.Content>&#xE74D;</Button.Content>
                                                    </Button>
                                                </Grid>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>

                                    <!-- Kleiner Bodenabstand in der Card -->
                                    <Border Height="8"
                                            Background="Transparent"/>
                                </StackPanel>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>

        <!-- ===== Footer: Icon-Buttons (Add day + Save) ===== -->
        <StackPanel Grid.Row="2"
                    Orientation="Horizontal"
                    HorizontalAlignment="Center"
                    Spacing="12"
                    Margin="0,8,0,0">
            <!-- Add day -->
            <Button Style="{StaticResource IconCircleButton}"
                    Command="{Binding AddTagCommand}"
                    ToolTipService.ToolTip="Add day"
                    AutomationProperties.Name="Add day">
                <Button.Content>&#xE710;</Button.Content>
            </Button>

            <!-- Save & Back -->
            <Button Style="{StaticResource IconCircleButton}"
                    Command="{Binding SaveAndGoBackCommand}"
                    ToolTipService.ToolTip="Save and Back"
                    AutomationProperties.Name="Save">
                <Button.Content>&#xE105;</Button.Content>
            </Button>
        </StackPanel>

        <!-- ===== Bottom-Navigation (Uno Toolkit) ===== -->
        <utu:TabBar Grid.Row="3"
                    Margin="0,8,0,0">
            <utu:TabBar.Items>
                <utu:TabBarItem x:Uid="TabHome"
                                Padding="12"
                                Command="{Binding NavigateToHomeCommand}">
                    <utu:TabBarItem.Icon>
                        <FontIcon FontFamily="{ThemeResource SymbolThemeFontFamily}"
                                  FontSize="24"
                                  Glyph="&#xE10F;"/>
                    </utu:TabBarItem.Icon>
                </utu:TabBarItem>

                <utu:TabBarItem x:Uid="TabPlans"
                                Padding="12"
                                Command="{Binding SaveAndGoBackCommand}">
                    <utu:TabBarItem.Icon>
                        <FontIcon FontFamily="{ThemeResource SymbolThemeFontFamily}"
                                  FontSize="24"
                                  Glyph="&#xE8A5;"/>
                    </utu:TabBarItem.Icon>
                </utu:TabBarItem>
            </utu:TabBar.Items>
        </utu:TabBar>


    </Grid>
</Page>
