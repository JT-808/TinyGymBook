<Page
    x:Class="Tiny_GymBook.Presentation.PlanDetail"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid x:Name="RootGrid"
          Padding="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBox Grid.Row="0"
                 Text="{Binding Trainingsplan.Name, Mode=TwoWay}"
                 FontSize="24"
                 Header="Trainingsplan-Name"
                 FontWeight="Bold"
                 Margin="0,0,0,16"/>

        <!-- Alle Tage mit Übungen -->
        <ScrollViewer Grid.Row="1">
            <ItemsControl ItemsSource="{Binding Tage}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Margin="0,0,0,24">
                            <!-- Tag-Header + +Button -->
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="{Binding Name}"
                                           FontSize="20"
                                           FontWeight="Bold"
                                           Margin="0,0,0,8"/>
                                <Button Grid.Column="1"
                                        Content="+"
                                        FontSize="22"
                                        VerticalAlignment="Top"
                                        Margin="8,0,0,0"
                                        Command="{Binding DataContext.AddUebungToTagCommand, ElementName=RootGrid}"
                                        CommandParameter="{Binding}"/>
                            </Grid>
                            <!-- Übungen für diesen Tag -->
                            <ItemsControl ItemsSource="{Binding Uebungen}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <StackPanel Margin="0,0,0,10"
                                                    BorderBrush="LightGray"
                                                    BorderThickness="0,0,0,1">
                                            <TextBlock Text="{Binding Name}"
                                                       FontSize="16"
                                                       FontWeight="SemiBold"/>
                                            <!-- Optional: Mehr Details, z.B. Sätze, Kommentar, etc. -->
                                        </StackPanel>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </StackPanel>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>

        <!-- Footer -->
        <StackPanel Grid.Row="2"
                    Orientation="Horizontal"
                    HorizontalAlignment="Center"
                    Margin="0,8,0,0"
                    Spacing="12">
            <Button Content="Tag hinzufügen"
                    Command="{Binding AddTagCommand}"/>
            <Button Content="Speichern und zurück"
                    Command="{Binding SaveAndGoBackCommand}"/>
        </StackPanel>
    </Grid>
</Page>
