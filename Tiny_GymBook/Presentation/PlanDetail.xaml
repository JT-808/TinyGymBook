<Page
    x:Class="Tiny_GymBook.Presentation.PlanDetail"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid x:Name="RootGrid"
          Padding="12"
          RowSpacing="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Header -->
            <RowDefinition Height="Auto"/>
            <!-- Debug -->
            <RowDefinition Height="*"/>
            <!-- Scrollbarer Inhalt -->
            <RowDefinition Height="Auto"/>
            <!-- Footer Buttons -->
            <RowDefinition Height="Auto"/>
            <!-- Spacer für (simulierte) TabBar -->
        </Grid.RowDefinitions>

        <!-- ===== Sticky Header: Planname  ===== -->
        <Grid Grid.Row="0"
              Padding="0,0,0,8"
              Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
            <TextBox
                Text="{Binding Trainingsplan.Name, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                PlaceholderText="Workout Plan"
                FontSize="20"
                FontWeight="Bold"
                BorderThickness="0,0,0,1"
                Padding="0,4,0,8"/>
        </Grid>

        <!-- ===== Debug/Status ===== -->
        <StackPanel Grid.Row="1"
                    Orientation="Horizontal"
                    Spacing="12">
            <TextBlock Text="Days count:"/>
            <TextBlock Text="{Binding Tage.Count}"/>
            <TextBlock Text="• PlanId:"
                       Margin="12,0,0,0"/>
            <TextBlock Text="{Binding Trainingsplan.Trainingsplan_Id}"/>
        </StackPanel>

        <!-- ===== Scrollbarer Inhalt ===== -->
        <ScrollViewer Grid.Row="2"
                      VerticalScrollBarVisibility="Auto">
            <ItemsControl ItemsSource="{Binding Tage}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <StackPanel/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>

                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Margin="0,0,0,12"
                                Padding="10"
                                BorderBrush="{ThemeResource SystemControlForegroundBaseLowBrush}"
                                BorderThickness="1"
                                CornerRadius="8">
                            <StackPanel Spacing="8">

                                <!-- Day name + Add exercise -->
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <!-- Delete -->
                                    </Grid.ColumnDefinitions>

                                    <TextBox
                                        Text="{Binding Name, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                        PlaceholderText="Day"
                                        FontSize="18"
                                        BorderThickness="0,0,0,1"
                                        Padding="0,2,0,6"/>
                                    <!-- Add exercise -->
                                    <Button Grid.Column="1"
                                            Padding="6"
                                            Command="{Binding DataContext.AddUebungToTagCommand, ElementName=RootGrid}"
                                            CommandParameter="{Binding}">
                                        <Button.Content>
                                            <FontIcon FontFamily="{ThemeResource SymbolThemeFontFamily}"
                                                      Glyph="&#xE710;"/>
                                            <!-- Add -->
                                        </Button.Content>
                                    </Button>

                                    <!-- Delete day -->
                                    <Button Grid.Column="2"
                                            Padding="6"
                                            Style="{StaticResource IconCircleButton}"
                                            Foreground="Red"
                                            Command="{Binding DataContext.DeleteTagCommand, ElementName=RootGrid}"
                                            CommandParameter="{Binding}"
                                            ToolTipService.ToolTip="Delete day"
                                            AutomationProperties.Name="Delete day">
                                        <Button.Content>&#xE74D;</Button.Content>
                                    </Button>

                                </Grid>

                                <!-- Exercises -->
                                <ItemsControl ItemsSource="{Binding Uebungen}">
                                    <ItemsControl.ItemsPanel>
                                        <ItemsPanelTemplate>
                                            <StackPanel/>
                                        </ItemsPanelTemplate>
                                    </ItemsControl.ItemsPanel>

                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Grid Margin="0,6,0,0">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>

                                                <TextBox
                                                    Text="{Binding Name, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                    PlaceholderText="Exercise"
                                                    FontSize="16"
                                                    BorderThickness="0,0,0,1"
                                                    Padding="0,2,0,6"/>

                                                <Button Grid.Column="1"
                                                        Padding="6"
                                                        Command="{Binding DataContext.DeleteExerciseCommand, ElementName=RootGrid}"
                                                        CommandParameter="{Binding}">
                                                    <Button.Content>
                                                        <FontIcon FontFamily="{ThemeResource SymbolThemeFontFamily}"
                                                                  Glyph="&#xE74D;"/>
                                                        <!-- Delete -->
                                                    </Button.Content>
                                                </Button>
                                            </Grid>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>





                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>

        <!-- ===== Footer: Icon-Buttons (Add day + Save) ===== -->
        <StackPanel Grid.Row="3"
                    Orientation="Horizontal"
                    HorizontalAlignment="Center"
                    Spacing="12"
                    Margin="0,8,0,0">
            <!-- Add day -->
            <Button Style="{StaticResource IconCircleButton}"
                    Command="{Binding AddTagCommand}"
                    ToolTipService.ToolTip="Add day"
                    AutomationProperties.Name="Add day">
                <Button.Content>&#xE710;</Button.Content>
            </Button>

            <!-- Save & Back -->
            <Button Style="{StaticResource IconCircleButton}"
                    Command="{Binding SaveAndGoBackCommand}"
                    ToolTipService.ToolTip="Save and Back"
                    AutomationProperties.Name="Save">
                <Button.Content>&#xE105;</Button.Content>
            </Button>
        </StackPanel>

        <!-- Spacer, der eine TabBar „vorspielt“ -->
        <Border Grid.Row="4"
                Height="{StaticResource TabBarHeight}"
                Background="Transparent"/>


    </Grid>
</Page>
